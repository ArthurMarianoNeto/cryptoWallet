<p id="notice"><%= notice %></p>

<h1>Moedas</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Sigla</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>

        <td><%= image_tag coin.url_image, size: "25x25" %></td>
        <td><%= link_to 'Mostrar', coin %></td>
        <td><%= link_to 'Editar', edit_coin_path(coin) %></td>

        <td><%= link_to 'Apagar', coin, method: :delete, data: { confirm: 'Está certo disto?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

